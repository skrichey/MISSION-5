@page
@model MISSION_5.Pages.TutoringCalculatorModel
@{
    ViewData["Title"] = "Tutoring Calculator";
}

<h1>Tutoring Calculator</h1>
<section>
    <label for="hours">Number of Hours:</label>
    <input type="number" id="hours" min="1" required>

    <label for="rate">Hourly Rate:</label>
    <input type="text" id="rate" value="30" readonly>

    <button id="calculate">Calculate</button>

    <p>Total Cost: $<span id="total">0.00</span></p>
</section>

<a asp-page="/Index">Back to Home</a>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/calculator.js"></script>

